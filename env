## install location
declare -A FILELOC

# bash
FILELOC[baliases]=~/.baliases
FILELOC[bashrc]=~/.bashrc
FILELOC[benv]=~/.benv
FILELOC[benv.priv]=~/.benv.priv
FILELOC[bfunctions]=~/.bfunctions
# debug, editor and terminal multiplexer
FILELOC[gdbinit]=~/.gdbinit
FILELOC[vimrc]=~/.vimrc
FILELOC[tmux.conf]=~/.tmux.conf
# i3
FILELOC[i3config]=~/.config/i3/config
FILELOC[i3statusconfig]=~/.config/i3status/config
FILELOC[i3blocksconfig]=~/.config/i3blocks/config
# fun
FILELOC[daily_quotes.txt]=~/.daily_quotes.txt
# X
FILELOC[xsessionrc]=~/.xsessionrc
FILELOC[xinitrc]=~/.xinitrc
FILELOC[Xresources]=~/.Xresources
# git
FILELOC[gitconfig]=~/.gitconfig
FILELOC[gitignore]=~/.gitignore
# bin files and scripts
FILELOC[bin]=~/.bin

export FILELOC;
