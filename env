## install location
declare -A FILELOC

# bash
FILELOC[home/baliases]=~/.baliases
FILELOC[home/bashrc]=~/.bashrc
FILELOC[home/benv]=~/.benv
FILELOC[home/benv.priv]=~/.benv.priv
FILELOC[home/bfunctions]=~/.bfunctions
# debug, editor and terminal multiplexer
FILELOC[home/gdbinit]=~/.gdbinit
FILELOC[home/vimrc]=~/.vimrc
FILELOC[home/tmux.conf]=~/.tmux.conf
# i3
FILELOC[home/i3config]=~/.config/i3/config
FILELOC[home/i3statusconfig]=~/.config/i3status/config
FILELOC[home/i3blocksconfig]=~/.config/i3blocks/config
# X
FILELOC[home/xsessionrc]=~/.xsessionrc
FILELOC[home/xinitrc]=~/.xinitrc
FILELOC[home/Xresources]=~/.Xresources
# git
FILELOC[home/gitconfig]=~/.gitconfig
FILELOC[home/gitignore]=~/.gitignore
# bin files and scripts
FILELOC[home/bin]=~/.local/bin
# fun
FILELOC[home/txt]=~/.local/res

export FILELOC;
